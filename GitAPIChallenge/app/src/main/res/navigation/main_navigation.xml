<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    android:label="@string/nav_app_bar_navigate_up_description"
    app:startDestination="@id/mainFragment">
    <fragment
        android:id="@+id/mainFragment"
        android:name="br.com.jeferson.git.challenge.ui.main.ListFragment"
        android:label="@string/title_list_fragment"
        tools:layout="@layout/fragment_list_repo" >
        <action
            android:id="@+id/action_mainFragment_to_prFragment"
            app:destination="@id/prFragment" />
    </fragment>
    <fragment
        android:id="@+id/prFragment"
        android:name="br.com.jeferson.git.challenge.ui.main.ListPRFragment"
        android:label="@string/title_pr_fragment"
        tools:layout="@layout/fragment_list_pr">
        <argument
            android:name="login"
            app:argType="string" />
        <argument
            android:name="name"
            app:argType="string" />
    </fragment>
</navigation>